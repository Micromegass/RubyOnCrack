<h1 class="heading"> Showing all Questions </h1>

<div class="container">
 <div class="row">
   <div class="col-sm-10 col-sm-offset-1">
<% @questions.each do  |question| %>
   <%= link_to question.title, question %> 
    <p> <%= question.description %> </p>
   <%= link_to "New Question", new_question_path, class:"btn btn-success"%>
   <%= link_to "Edit Question", edit_question_path(question), class:"btn btn-primary" %>
   <%= link_to "Delete Question", question, class:"btn btn-warning", method: :delete, data: {confirm: "Are you sure you'd like to delete this post?"}  %>
<% end  %>
   </div>
  </div>
 </div>
